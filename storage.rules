rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is an admin, promotor, or secretary
    function isAdmin() {
      return request.auth != null && 
        (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'promotor' ||
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'secretary');
    }

    // --- Products images ---
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Promotions images ---
    match /promotions/{promotionId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Community images ---
    match /community/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // --- Default rules for all other paths ---
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
