rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an administrator or a promoter
    function isAdmin() {
      return request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'promotor' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'secretary');
    }

    // --- Community Posts ---
    match /community_posts/{postId} {
      allow read: if request.auth != null;
      
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
      
      allow delete: if request.auth != null 
        && (resource.data.userId == request.auth.uid || isAdmin());
      
      allow update: if request.auth != null && (
        // Allow if the user is the owner
        resource.data.userId == request.auth.uid || 
        // Allow if the user is an admin
        isAdmin() ||
        // Allow if ONLY the 'likes' field is being modified
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']))
      );
    }

    // --- Default rules for all other collections ---
    // This ensures we don't break existing functionality while fixing community posts.
    // In a production environment, these should be more granular for each collection.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
